@page
@model TaskForceApp.Pages.ExpenseTracker.EditExpenseModel
@{
}
<html>
<body style="background-color:black;">
</br>
<h2></h2>
    <a href="/ExpenseTracker/AllExpense" class="btn btn-info btn-sm">Go Back</a>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h2 class="text-center mb-4">Edit Expense</h2>
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                <strong>@Model.ErrorMessage</strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert" id="successMessage">
                                <strong>@Model.SuccessMessage</strong>
                            </div>

                            <!--  redirection after displaying the message -->
                            <script>
                                setTimeout(function() {
                                    window.location.href = '/ExpenseTracker/AllExpense';
                                }, 1000); // Redirect after 1 seconds
                            </script>
                        }
                    <form method="post">
                        <div class="form-group mb-3">
                            <label for="description">Expense Description</label>
                            <input type="text" class="form-control" id="description" name="description" value="@Model.AllInfo.description" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="expense">Expense Amount</label>
                            <input type="number" class="form-control" id="expense" name="expense" value="@Model.AllInfo.expense" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="role">Account</label>
                                <select class="form-control" id="account" name="account" required>
                                    <option value="">Select Account</option>
                                    <option value="saving">Saving Account</option>
                                    <option value="bank">Bank Account</option>
                                    <option value="momo">Mobile Money</option>
                                </select>
                        </div>
                        <input type="hidden" name="ID" value="@Model.AllInfo.ID" />
                        <button type="submit" class="btn btn-primary btn-block">Edit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
