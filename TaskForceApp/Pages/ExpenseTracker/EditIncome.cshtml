@page
@model TaskForceApp.Pages.ExpenseTracker.EditIncomeModel
@{
}
<br />
<html>
<body>
    <a class="btn btn-info" href="/ExpenseTracker/AllIncome">Go Back</a>
    <h2>Edit Income</h2>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@Model.ErrorMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" id="successMessage">
            <strong>@Model.SuccessMessage</strong>
        </div>

        <!-- Add JavaScript for redirection after displaying the message -->
        <script>
            setTimeout(function() {
                window.location.href = '/ExpenseTracker/AllIncome';
            }, 1000); // Redirect after 1 seconds
        </script>
    }

    <form method="post">
        <div class="form-group">
            <label class="col-sm-3 col-form-label"> ID</label>
            <div class="col-sm-6">
                <input type="number" class="form-control" name="ID" value="@Model.AllInfo.ID" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 col-form-label">Description</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="description" value="@Model.AllInfo.description" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 col-form-label">Income Amount</label>
            <div class="col-sm-6">
                <input type="number" class="form-control" name="income" value="@Model.AllInfo.expense" />
            </div>
        </div>

        <div class="form-group ">
            <label for="role">Account</label>
            <select class="form-control" id="account" name="account" value="@Model.AllInfo.account" required>
                <option value="">Select Account</option>
                <option value="saving">Saving Account</option>
                <option value="bank">Bank Account</option>
                <option value="momo">Mobile Money</option>
            </select>
        </div>

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid" style="margin-left:30px;">
                <button type="submit" class="btn btn-danger" style="margin-left:30px;">EDIT</button>
            </div>
            <div class="offset-sm-3 col-sm-3 d-grid" style="margin-left:60px;">
                <a class="btn btn-outline-primary" href="/ExpenseTracker/AllIncome" role="button">Cancel</a>
            </div>
        </div>
    </form>
</body>
</html>
